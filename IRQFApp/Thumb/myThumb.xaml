<UserControl x:Class="WpfApplication2.myThumb"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApplication2"
             mc:Ignorable="d"  Loaded="UserControl_Loaded">
    <Grid Margin="20">
        <Ellipse Width="100" Height="100" Fill="{Binding NodeColor}"/>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Foreground="White" FontSize="30" Text="{Binding NodeID}" Margin="5" TextAlignment="Center"/>
            <TextBlock Foreground="#FFD091" FontSize="30" Text="{Binding NodeNr}" Margin="5" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
